<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.zqx.bigchat.MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_weight="1.03"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment,InefficientWeight">

        <FrameLayout
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.03"
            tools:ignore="NestedWeights">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#D6D7D7"
        android:orientation="horizontal"
        tools:ignore="InefficientWeight">

        <ImageButton
            android:id="@+id/ib_talk"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ib_talk1"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_friend"
            android:layout_width="96dp"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/ib_friend1"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_news"
            android:layout_width="98dp"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/ib_news1"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/ib_mine1"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
